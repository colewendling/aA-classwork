
<h1>Edit a Band</h1>

<form class='form' action="<%= band_url(@band) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <p>
    <label for='band-name'>Name</label>
    <input id='band-name' type="text" name="band[name]" value="<%= @band.name %>">
  </p>

  <input type="submit">
</form>